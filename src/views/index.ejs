<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs',{otherScript: include('./partials/scripts.ejs',{view:'Home'})}) %>

    <body data-idUser="<%= locals.userLogin?.id %>">
        <main>
            <%- include('./partials/header.ejs') %>


                <div class="main main__index">

                    <section class="home__main__section--banner" style="height: 200px;">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                    class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                    aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                    aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner imagenes-carrusel">
                                <div class="carousel-item active">
                                    <img src="/images/home/BANNER-OFICIAL-INTEL.png" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="/images/home/web-banner.png" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="/images/home/carrete3.jpg" class="d-block w-100" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </section>
                    <section class="main__section__productos main__section__productos__ultGeneracion">

                        <h1 id="titulo">Productos de Última Generación</h1>
                        <div class="paginator">
                            <%- include('./partials/paginator.ejs') %>
                        </div>
                        <div class="contenedor_prod_ultGener" id="container-newest-card">

                        </div>
                        <div class="paginator">
                            <%- include('./partials/paginator.ejs') %>
                        </div>

                    </section>

                    
                    <section class="main__section__productos__offer offer py-5">
                        <h1>Ofertas Imperdibles</h1>
                        <button class="btn control-prev btn-index" role="button" data-slide="prev">
                            <i class="fa-solid fa-circle-chevron-left"></i>
                        </button>
                        <div class=""
                            id="container-offer-card">

                        </div>
                        <button class="btn control-next btn-index" role="button" data-slide="next">
                            <i class="fa-solid fa-circle-chevron-right"></i>
                        </button>
                    </section>

                    <section class="main__section__compra">
                        <i class="fa-regular fa-credit-card"></i>
                        <h4>Pagá hasta en 12 cuotas</h4>
                        <i class="fa-sharp fa-solid fa-truck"></i>
                        <h4>Recibí tu producto</h4>
                        <i class="fa-solid fa-shield-halved"></i>
                        <h4>Compra 100% Segura</h4>
                    </section>
                    <section class="main__section__marcas">
                        <h2>Las Mejores Marcas están en AMADEUS</h2>

                        <%- include('./partials/carreteMarcas.ejs') %>


                    </section>
                </div>
        </main>
        <%- include('./partials/assistant.ejs') %>
        <%- include('./partials/footer.ejs') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>
            <script src="/js/paginatorIndex.js"></script>
            <script src="/js/paginatorIndexOffer.js"></script>
            <script src="/js/favorites.js"></script>
            <script src="/js/carreteMarcas.js"></script>
    </body>

</html>